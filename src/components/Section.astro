---
const { title } = Astro.props;
---

<section>
  {title && <h2>{title}</h2>}
  <slot />
</section>

<style>
  section {
    max-width: 700px;
    margin: 0 auto 24px;
  }

  h2 {
    color: var(--main-orange-color);
    font-size: 1.5rem;
    font-weight: 700;
    line-height: 1.5;
    margin-bottom: 8px;
  }
  @media (min-width: 940px) {
    section {
      margin: 0 auto 48px;
    }
  }
</style>
