---
import Section from "@/components/Section.astro";
import Mail from "@/components/icons/Mail.astro";
import Phone from "@/components//icons/Phone.astro";
import LinkedIn from "@/components/icons/LinkedIn.astro";
import GitHub from "@/components/icons/GitHub.astro";
import WorldMap from "@/components/icons/WorldMap.astro";
import X from "@/components/icons/X.astro";

import UnitedStates from "@/components/flags/UnitedStates.astro";
import Colombia from "@/components/flags/Colombia.astro";

import type { SocialIcon } from "@/types";

import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
const {
  name,
  label,
  location,
  email,
  emailTitle,
  profiles,
  image,
  phone,
  phoneTitle,
} = i18n.basics;
const { city, region } = location;

const SOCIAL_ICONS: SocialIcon = {
  LinkedIn,
  GitHub,
  X,
};

const linkedInfo = profiles.find(({ network }) => network === "LinkedIn");
const linkedUrl = linkedInfo?.url;

const printInfo = [email, phone, linkedUrl].filter(Boolean).join(" • ");
---

<Section>
  <div class="container">
    <div class="info">
      <h1>{name}</h1>
      <h2>{label}</h2>
      <span>
        <WorldMap />
        {city}, {region}
      </span>
      <footer>
        <div class="print">
          {printInfo}
        </div>
        {
          email && (
            <a
              href={`mailto:${email}`}
              title={`${emailTitle} ${name}`}
              target="_blank"
              rel="noopener noreferer"
            >
              <Mail />
            </a>
          )
        }
        {
          phone && (
            <a
              href={`tel:${phone}`}
              title={`${phoneTitle} ${phone}`}
              target="_blank"
              rel="noopener noreferer"
            >
              <Phone />
            </a>
          )
        }
        {
          profiles.map(({ network, url, title }) => {
            const Icon = SOCIAL_ICONS[network];

            return (
              <a
                href={url}
                title={`${title} ${network}`}
                target="_blank"
                rel="noopener noreferer"
              >
                <Icon />
              </a>
            );
          })
        }
        {
          currentLocale === "es" ? (
            <a
              href={`/en`}
              title={`revisa el perfil de ${name} en inglés`}
              target="_self"
              rel="noopener noreferer"
            >
              <UnitedStates />
            </a>
          ) : (
            <a
              href={`/`}
              title={`review the ${name} profile in Spanish`}
              target="_self"
              rel="noopener noreferer"
            >
              <Colombia />
            </a>
          )
        }
      </footer>
    </div>
    <figure>
      <img src={image} alt={name} />
    </figure>
  </div>
</Section>

<style>
  .container {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  .info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding-right: 32px;
  }

  h1 {
    color: #ff4500;
    font-size: 2rem;
  }

  h2 {
    color: #111;
    font-weight: 500;
    font-size: 1.1rem;
    text-wrap: balance;
  }

  img {
    aspect-ratio: 1 / 1;
    object-fit: cover;
    width: 128px;
    border-radius: 16px;
  }

  span {
    color: #666;
    display: flex;
    align-items: start;
    gap: 0.25rem;
    font-size: 0.88rem;
    letter-spacing: -0.06rem;
  }

  footer {
    display: flex;
    gap: 4px;
    margin-top: 8px;
  }

  footer a {
    color: #777;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border: 1px solid #ddd;
    padding: 4px;
    height: 32px;
    width: 32px;
    border-radius: 6px;
    transition: all 0.3s ease;
  }

  footer a:hover {
    background: #d5c4a1;
    border: 1px solid #ccc;
  }
</style>
